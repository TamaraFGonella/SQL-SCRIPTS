DECLARE @is_xp_cmdshell_enabled INT;

-- Verificar si la opci칩n xp_cmdshell est치 habilitada
EXEC sp_configure 'show advanced options', 1;
RECONFIGURE;
EXEC sp_configure 'xp_cmdshell', @is_xp_cmdshell_enabled OUTPUT;

-- Mostrar el estado de xp_cmdshell
SELECT 
    CASE 
        WHEN @is_xp_cmdshell_enabled = 1 THEN 'xp_cmdshell est치 habilitado'
        ELSE 'xp_cmdshell no est치 habilitado'
    END AS Estado_xp_cmdshell;
